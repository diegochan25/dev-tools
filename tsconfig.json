{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/main/ts/*"],
            "@error/*": ["./src/main/ts/error/*"],
            "@cli/*": ["./src/main/ts/cli/*"],
            "@lib/*": ["src/main/ts/lib/*"],
            "@system/*": ["src/main/ts/system/*"],
            "@templates/*": ["src/main/ts/templates/*"],
            "@type/*": ["src/main/ts/types/*"]
        }
    }
}