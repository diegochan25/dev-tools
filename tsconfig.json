{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@error/*": ["./src/error/*"],
            "@cli/*": ["./src/cli/*"]
        }
    }
}